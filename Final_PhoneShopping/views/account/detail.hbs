{{#section 'title'}}
    Lịch sử đơn hàng
{{/section}}

<div class="tieude_page">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <button class="btn btn-default">
                    <a href="/account/history">
                        Quay lại lịch sử đơn hàng
                    </a>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4>CHI TIẾT ĐƠN HÀNG #{{order.MaDon}}</h4>
                <h4><strong>{{TinhTrang}}</strong></h4>
                <hr>
            </div>
        </div>
    </div>
</div>
<div class="noidung_page">
    <div class="container">
    	<div class="row">
    		<div class="col-lg-12">
    			<h3><strong>Thông tin sản phẩm</strong></h3>
                <hr>
    			<table style="width: 100%;">
                    <thead>
	                   <tr>
                            <td class="giohang_sanpham"></td>
							<td class="giohang_sanpham">Sản phẩm</td>
							<td class="giohang_dongia">Đơn giá</td>
							<td class="giohang_soluong">Số lượng</td>
						</tr>
					</thead>
					<tbody>
                        {{#each products}}
	                   <tr>
	                       <td class="giohang_sanpham">
	                           <img src="{{AnhDaiDien}}" class="img-responsive">
	                       </td>
                           <td class="giohang_sanpham">
                               <h4><strong>{{TenSP}}</strong></h4>
                           </td>
	                       <td class="giohang_dongia">
	                           <h4 id="dongia_1">{{number_format DonGia}}₫</h4>
	                       </td>
	                       <td class="giohang-soluong">
	                           <h4>{{SoLuong}}</h4>
	                       </td>
	                   </tr>
                       {{/each}}
                    </tbody>
                </table>
    		</div>
    	</div>
    	<hr>
    	<div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <h3><strong>Thông tin khách hàng:</strong></h3>
                    <ul>
                        <li>Họ và tên: {{khachhang.TenKH}}</li>
                        <li>Địa chỉ: {{khachhang.DiaChi}}</li>
                        <li>Điện thoại:{{khachhang.SoDienThoai}}</li>
                    </ul>
                </div>
                <hr>
                <div class="row">
                    <h3><strong>Thông tin người nhận:</strong></h3>
                    <ul>
                        <li>Họ và tên: {{order.TenNguoiNhan}}</li>
                        <li>Địa chỉ: {{order.DiaChiNhan}}</li>
                        <li>Điện thoại: {{order.SDT}}</li>
                    </ul>
                </div>
            </div>
    		<div class="col-lg-4">
    		  <table>
    				<tr>
    					<td>
    						<h4><b>Tổng tạm tính:</b></h4>
    					</td>
    					<td>
    						<h4>{{number_format ThanhTien}}₫</h4>
    					</td>
    				</tr>
    				<tr>
    					<td>
    						<h4><b>Phí giao hàng:</b></h4>
    					</td>
    					<td>
    						<h4>0₫</h4>
    					</td>
    				</tr>
    				<tr>
    					<td>
    						<h4><b>Tổng tiền:</b></h4>
    					</td>
    					<td style="color: red">
    						<h4><b>{{number_format ThanhTien}}₫</b></h4>
    					</td>
    				</tr>
    			</table>
    		</div>
    	</div>
    </div>
</div>