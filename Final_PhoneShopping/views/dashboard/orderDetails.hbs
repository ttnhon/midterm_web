{{#section 'title'}}
Chi tiết đon hàng: Mã đơn {{Order.MaDon}}
{{/section}}

	<div class="tieude_page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <button class="btn btn-default">
                            <a href="/dashboard/orders">
                                Quay lại danh sách đơn hàng
                            </a>
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4>CHI TIẾT ĐƠN HÀNG #{{Order.MaDon}}</h4>
                        <h4>Mã khách hàng: {{Order.MaKH}}</h4>
                        <h4>Ngày lập đơn hàng: {{dateFormat Order.NgayMua "DD-MM-YYYY"}}</h4>
                        <h4>Tình trạng đơn hàng: <strong>{{TinhTrang}}</strong></h4>
                        <hr>
                    </div>
                </div>
            </div>
    </div>
    <div class="noidung_page">
    	<div class="container">
    		<div class="row">
    			<div class="col-lg-12">
    				<h3><strong>Thông tin người nhận</strong></h3>
    				<ul>
    					<li>Họ và tên: {{Order.TenNguoiNhan}}</li>
    					<li>Địa chỉ: {{Order.DiaChiNhan}}</li>
    					<li>Điện thoại: {{Order.SDT}}</li>
    					<li>Ghi chú: {{Order.GhiChu}}</li>
    				</ul>
    			</div>
    		</div>
    		<hr>
    		<div class="row">
    			<div class="col-lg-12">
    				<h3><strong>Thông tin sản phẩm</strong></h3>
    				<table style="width: 100%;">
                        <thead>
	                        <tr>
							    <td class="giohang_sanpham">Sản phẩm</td>
							    <td class="giohang_dongia">Đơn giá</td>
							    <td class="giohang_soluong">Số lượng</td>
							    <td class="giohang_thanhtien">Thành tiền</td>
							</tr>
						</thead>
						<tbody>
							{{#each Details}}
	                        <tr>
	                            <td class="giohang_sanpham">
	                                <img src="{{AnhDaiDien}}" alt="{{TenSP}}" title="{{TenSP}}" class="img-responsive">
	                                <h4><strong>Mã sản phẩm: {{MaSP}}</strong></h4>
	                                <h4><strong>{{TenSP}}</strong></h4>
	                            </td>
	                            <td class="giohang_dongia">
	                                <h4 id="dongia_1">{{number_format Gia}}₫</h4>
	                            </td>
	                            <td class="giohang-soluong">
	                               <h4>{{SoLuong}}</h4>
	                            </td>
	                            <td class="giohang_thanhtien">
	                                <h4 id="thanhtien_1">{{number_format ThanhTien}}₫</h4>
	                            </td>
	                        </tr>
	                        {{/each}}
                        </tbody>
                    </table>
    			</div>
    		</div>
    		<hr>
    		<div class="row">
    			<div class="col-lg-12" align="right">
    				<table style="width: 40%;"">
    					<tr>
    						<td>
    							<h5><b>Tổng tạm tính:</b></h5>
    						</td>
    						<td>
    							<h5>{{number_format TongTien}}₫</h5>
    						</td>
    					</tr>
    					<tr>
    						<td>
    							<h5><b>Giảm giá:</b></h5>
    						</td>
    						<td>
    							<h5>0₫</h5>
    						</td>
    					</tr>
    					<tr>
    						<td>
    							<h5><b>Phí giao hàng:</b></h5>
    						</td>
    						<td>
    							<h5>0₫</h5>
    						</td>
    					</tr>
    					<tr>
    						<td>
    							<h5><b>Tổng tiền:</b></h5>
    						</td>
    						<td style="color: red">
    							<h5><b>{{number_format TongTien}}₫</b></h5>
    						</td>
    					</tr>
    				</table>
    			</div>
    		</div>
    	</div>
    </div>