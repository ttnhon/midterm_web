{{#section 'title'}}
Thêm mới loại sản phẩm
{{/section}}

{{#if showAlert}}
<div class="alert alert-success" style="margin: auto; padding: 10px; width: 50%;">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	Thêm mới thành công!
</div>
{{/if}}

<div style="margin: auto; padding: 10px; width: 40%;">
<div class="panel panel-default" style="padding: 10px">
<form action="" method="POST" role="form">
	<div class="form-group">
		<label for="">Tên Loại</label>
		<input type="text" class="form-control" id="" name="TenLoai" placeholder="Apple">
	</div>
	<div class="form-group">
		<label for="">Mô tả</label>
		<input type="text" class="form-control" id="" name="MoTa" placeholder="Mô tả sơ lược về hãng">
	</div>

	<a class="btn btn-default" href="/dashboard/categories" role="button">
		<span class="glyphicon glyphicon-arrow-left"></span>
		View List
	</a>
	<button type="submit" class="btn btn-primary">
		<span class="glyphicon glyphicon-save"></span>
		Save
	</button>
</form>
</div>
</div>